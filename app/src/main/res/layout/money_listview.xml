<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/listview_cell_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/xtb_to"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/listview_cell_image"
        android:layout_toEndOf="@id/listview_cell_image"/>

    <TextView
        android:id="@+id/canvi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/xtb_to"
        android:layout_toEndOf="@id/listview_cell_image"
        android:isIndicator="true"/>

    <TextView
        android:id="@+id/resta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/canvi"
        android:layout_toEndOf="@id/listview_cell_image"/>

</RelativeLayout>